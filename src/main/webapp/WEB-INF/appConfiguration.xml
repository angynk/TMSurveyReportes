<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <import resource="DataSource.xml"/>


    <context:annotation-config />
    <!-- Auto scan the components -->
    <context:component-scan
            base-package="com.tmTransmiSurvey" />


    <bean id="sessionFactory"
          class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">

        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <!--<prop key="hbm2ddl.auto">create</prop>-->
                <!--<prop key="hbm2ddl.auto">update</prop>-->
                <!--<prop key="current_session_context_class">thread</prop>-->
                <!--<prop key="cache.provider_class">org.hibernate.cache.NoCacheProvider</prop>-->
                <!--<prop key="hbm2ddl.auto">validate</prop>-->
            </props>
        </property>

        <property name="annotatedClasses">
            <list>
                <value>com.tmTransmiSurvey.model.entity.Usuario</value>
                <value>com.tmTransmiSurvey.model.entity.Role</value>
                <value>com.tmTransmiSurvey.model.entity.CuadroEncuesta</value>
                <value>com.tmTransmiSurvey.model.entity.RegistroEncuestaAscDesc</value>
                <value>com.tmTransmiSurvey.model.entity.ServicioTs</value>
                <value>com.tmTransmiSurvey.model.entity.Estacion</value>
                <value>com.tmTransmiSurvey.model.entity.ServicioEstacion</value>
                <value>com.tmTransmiSurvey.model.entity.FOcupacionEncuesta</value>
                <value>com.tmTransmiSurvey.model.entity.RegistroEncuestaFOcupacion</value>
                <value>com.tmTransmiSurvey.model.entity.ADPuntoEncuesta</value>
                <value>com.tmTransmiSurvey.model.entity.RegistroEncuestaADPunto</value>
                <value>com.tmTransmiSurvey.model.entity.Estudio</value>
                <value>com.tmTransmiSurvey.model.entity.ADabordoProcesada</value>
                <value>com.tmTransmiSurvey.model.entity.ADabordoRegProcesada</value>

            </list>
        </property>
    </bean>

    <bean id="transactionManager"
          class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <tx:annotation-driven transaction-manager="transactionManager" />

